<header class="bg-white container-detail-profile shadow overflow-hidden p-5" >
    <div class="row">
        <div class="col-md-3">
            <div class="detail-profil-image" >
                <img src="https://images.prismic.io/cadremploi-edito/2c42db4e-15ac-49a4-8d50-e4113a8adbb5_Bonne-photo-cv-femme1.JPG?auto=compress,format" class="img-fluid" alt="">
            </div>
        </div>
        <div class="col-md-6">
            <h1 class="detail-profil-title">{{ user.fullName }}</h1>
            <h4 class="detail-profil-sub-title">{{ user.profileTitle }}</h4>
            <h6 class="title">Adresse <span class="fw-bold" >{{ user.address }}</span></h6>
            <h6 class="title">Age <span class="fw-bold" >26 Ans</span></h6>
            <div class="card-group" >
                <div class="card" >
                    <div class="card-body p-0 bg-blue-dark" >
                        <p class="m-2 detail-profil-card-text text-white" >Exp√©rience</p>
                        <p class="m-2 detail-profil-card-text fw-bold text-white " >
                            {% if user.experienceLevels == 1 %}
                                0-2 ans
                            {% elseif  user.experienceLevels == 2 %}
                                2-7 ans
                            {% elseif  user.experienceLevels == 3 %}
                                7ans et +
                            {% endif %}

                        </p>
                    </div>
                </div>
                <div class="card" >
                    <div class="card-body p-0  " >
                        <p class="m-2 detail-profil-card-text fw-bold " >Nombre de project</p>
                        <p class="m-2 detail-profil-card-text fw-bold " >0</p>
                    </div>
                </div>
                <div class="card" >
                    <div class="card-body p-0 " >
                        <p class="m-2 detail-profil-card-text fw-bold" >Niveau d'etude</p>
                        <p class="m-2 detail-profil-card-text fw-bold" >Bac +5</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="container" >
                <a href="#" class="btn detail-profil-btn col-12 text-white bg-rose-dark" >Proposer un poste</a>
            </div>
        </div>
    </div>
</header>
